<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:fontFamily="@font/note_bold"
            android:text="영업 정보"
            android:textColor="#323232"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/note_medium"
                android:text="운영시간"
                android:textColor="#323232"
                android:includeFontPadding="false"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fragment_information_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:fontFamily="@font/note_medium"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/note_medium"
                android:text="휴무일"
                android:includeFontPadding="false"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fragment_information_dayoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/note_medium"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/note_medium"
                android:includeFontPadding="false"
                android:text="전화번호"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fragment_information_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/note_medium"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:fontFamily="@font/note_bold"
            android:text="위치 정보"
            android:textColor="#323232"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/note_medium"
                android:text="배달지역"
                android:textColor="#323232"
                android:layout_marginBottom="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fragment_information_del_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/note_medium"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/note_medium"
                android:text="사업자 주소"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fragment_information_rest_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/note_medium"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>